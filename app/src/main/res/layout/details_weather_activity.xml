<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dt_details"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_max"
        android:id="@+id/temp_max_details_text"
        android:layout_below="@+id/dt_details"
        android:layout_alignLeft="@+id/dt_details"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_max_details"
        android:layout_toRightOf="@+id/temp_max_details_text"
        android:layout_alignTop="@+id/temp_max_details_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_min"
        android:id="@+id/temp_min_details_text"
        android:layout_below="@+id/temp_max_details_text"
        android:layout_alignLeft="@+id/temp_max_details_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_min_details"
        android:layout_toRightOf="@+id/temp_min_details_text"
        android:layout_alignTop="@+id/temp_min_details_text"/>

    <TextView
        android:id="@+id/humidity__details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temp_min_details_text"
        android:layout_below="@+id/temp_min_details_text"
        android:text="@string/humidity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidity_detalis"
        android:layout_toRightOf="@+id/humidity__details_text"
        android:layout_alignTop="@+id/humidity__details_text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:id="@+id/pressure__details_text"
        android:layout_below="@+id/humidity__details_text"
        android:layout_alignLeft="@+id/humidity__details_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pressure_detalis"
        android:layout_toRightOf="@+id/pressure__details_text"
        android:layout_alignTop="@+id/pressure__details_text"/>

</android.widget.RelativeLayout>